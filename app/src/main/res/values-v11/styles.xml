<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- THEME STYLE -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/colorSalmon</item>
        <item name="colorPrimaryDark">@color/colorLightAlpha</item>
        <item name="android:clipToPadding">false</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="windowActionBarOverlay">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="icon">@drawable/ic_launcher</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="background">@color/colorSalmon</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- STRING STYLES -->

    <style name="Paragraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title" parent="Paragraph">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TitleSalmon" parent="Paragraph">
        <item name="android:textColor">@color/colorSalmon</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BlankTextWithShadow" parent="Paragraph">
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ProfileSection" parent="Paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="NoTextSwitch">
        <item name="android:textOn"/>
        <item name="android:textOff"/>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumbTextPadding">5dp</item>
        <item name="android:switchMinWidth">60dp</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDarkGray</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- IMAGES STYLES -->

    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- BUTTONS STYLES -->

    <style name="ButtonSalmon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorSalmon</item>
    </style>

    <style name="ButtonGreen">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/rounded_square_green</item>
    </style>
</resources>