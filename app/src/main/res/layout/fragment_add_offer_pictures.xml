<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitle">
            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/left_arrow_salmon"
                android:onClick="previousView"/>
            <TextView
                style="@style/TitleSalmon"
                android:text="@string/add_photos"
                android:gravity="center"
                android:id="@+id/addOfferPicturesTitle"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:layout_below="@+id/pageTitle"
            android:layout_above="@+id/finishaddOfferButton">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                android:id="@+id/selectImages">
                <TableRow android:layout_width="0dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/rounded_bordered_square_light_gray"
                        android:id="@+id/pictureFromCamera">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/camera"
                            android:padding="4dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSalmon"
                            android:gravity="center"
                            android:text="@string/take_a_picture"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/rounded_bordered_square_light_gray"
                        android:id="@+id/pictureFromGallery">
                        <ImageView
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSalmon"
                            android:gravity="center"
                            android:text="@string/choose_from_gallery"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/offerDetailsImages"
                android:fitsSystemWindows="true"
                android:layout_below="@+id/selectImages">
                <android.support.v4.view.ViewPager
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="100%"
                    android:background="@color/colorWhite"
                    android:id="@+id/addOfferPicturesPager">
                </android.support.v4.view.ViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </me.relex.circleindicator.CircleIndicator>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/offerFlatImagesPagerIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@+id/addOfferPicturesPager" />
            </android.support.percent.PercentRelativeLayout>
        </RelativeLayout>

        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="16dp"
            android:id="@+id/finishaddOfferButton"
            android:text="@string/finish_add_offer"
            android:onClick="nextView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/square_salmon" />
    </RelativeLayout>
</ScrollView>