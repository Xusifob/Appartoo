<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/ButtonSalmon"
            android:text="@string/action_send_message"
            android:id="@+id/sendMessageButton"
            android:layout_alignParentBottom="true"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/scrollView"
                android:layout_above="@+id/sendMessageButton">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <fragment
                        android:name="mobile.appartoo.fragment.OfferDetailFragment"
                        android:id="@+id/offerListFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/offerFlatImage">
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        class="mobile.appartoo.adapter.WorkaroundMapFragment"
                        app:layout_widthPercent="100%"
                        app:layout_aspectRatio="178%"
                        android:id="@+id/map"
                        tools:context=".MapsActivity"
                        android:name="com.google.android.gms.maps.SupportMapFragment" />
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
    <include layout="@layout/navigation_drawer_layout"/>
</android.support.v4.widget.DrawerLayout>