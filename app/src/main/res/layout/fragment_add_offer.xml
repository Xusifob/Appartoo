<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSalmon"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorSalmon"
                android:background="@color/colorWhite"
                android:textSize="20sp"
                android:text="@string/offer_description"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="dumbFocusView"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/offer_title"
            android:layout_margin="4dp"
            android:id="@+id/addOfferTitle"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/offer_keyword"
            android:layout_margin="4dp"
            android:id="@+id/addOfferKeyword"
            android:focusable="false"
            android:singleLine="true"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:layout_margin="4dp"
            android:id="@+id/addOfferAddress"
            android:drawableStart="@drawable/marker_gray"
            android:drawableLeft="@drawable/marker_gray"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/start"
                android:layout_weight="1"
                android:focusable="false"
                android:drawableStart="@drawable/clock"
                android:drawableLeft="@drawable/clock"
                android:id="@+id/addOfferAvailabilityStarts"
                android:drawablePadding="4dp"/>
            <View
                android:layout_width="8dp"
                android:layout_height="0dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/end"
                android:focusable="false"
                android:layout_weight="1"
                android:drawableStart="@drawable/clock"
                android:drawableLeft="@drawable/clock"
                android:id="@+id/addOfferAvailabilityEnds"
                android:drawablePadding="4dp"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price_per_month"
            android:inputType="numberDecimal"
            android:layout_margin="4dp"
            android:id="@+id/addOfferPrice"
            android:drawableStart="@drawable/euro"
            android:drawableLeft="@drawable/euro"
            android:drawablePadding="4dp"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rooms_available"
            android:inputType="number"
            android:layout_margin="4dp"
            android:drawableStart="@drawable/bed_gray"
            android:drawableLeft="@drawable/bed_gray"
            android:drawablePadding="4dp"
            android:id="@+id/addOfferRooms"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:inputType="phone"
            android:layout_margin="4dp"
            android:drawableStart="@drawable/phone_gray"
            android:drawableLeft="@drawable/phone_gray"
            android:drawablePadding="4dp"
            android:id="@+id/addOfferPhone"
            android:singleLine="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/offer_description"
            android:isScrollContainer="true"
            android:inputType="textMultiLine"
            android:gravity="bottom"
            android:id="@+id/addOfferDescription"
            android:layout_margin="4dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/toggle_rounded_bordered_square"
                    android:onClick="toggleView"
                    android:id="@+id/addOfferAllowSmoker">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/colorSalmon"
                        android:id="@+id/addOfferTextSmoker"
                        android:text="@string/dont_accept_smokers" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/addOfferTextSmoker"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tag="false"
                        android:id="@+id/addOfferImageSmoker"
                        android:layout_centerInParent="true"
                        android:src="@drawable/is_not_smoker" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:background="@drawable/toggle_rounded_bordered_square"
                    android:onClick="toggleView"
                    android:id="@+id/addOfferAcceptAnimals">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/colorSalmon"
                        android:id="@+id/addOfferTextAnimals"
                        android:layout_alignParentBottom="true"
                        android:text="@string/dont_accept_animals" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tag="false"
                        android:layout_above="@+id/addOfferTextAnimals"
                        android:layout_centerInParent="true"
                        android:id="@+id/addOfferImageAnimals"
                        android:src="@drawable/dont_accept_animals" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSalmon"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorSalmon"
                android:background="@color/colorWhite"
                android:textSize="20sp"
                android:text="@string/add_residents"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:background="@drawable/rounded_bordered_square_light_gray"
            android:id="@+id/addResident">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camera"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSalmon"
                android:gravity="center"
                android:text="@string/take_a_picture"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSalmon"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorSalmon"
                android:background="@color/colorWhite"
                android:textSize="20sp"
                android:text="@string/add_photos"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <com.appartoo.view.ExpandableHeightGridView
            android:id="@+id/pictureContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:isScrollContainer="false"
            android:columnWidth="96dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp">
        </com.appartoo.view.ExpandableHeightGridView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_margin="4dp">
            <TableRow android:layout_width="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_bordered_square_light_gray"
                android:id="@+id/pictureFromCamera">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSalmon"
                    android:gravity="center"
                    android:text="@string/take_a_picture"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:background="@drawable/rounded_bordered_square_light_gray"
                android:id="@+id/pictureFromGallery">
                <ImageView
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gallery"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSalmon"
                    android:gravity="center"
                    android:text="@string/choose_from_gallery"
                    android:layout_weight="1"/>
            </LinearLayout>
            </TableRow>
        </TableLayout>

        <Button
            style="@style/ButtonSalmon"
            android:id="@+id/addOfferSaveButton"
            android:text="@string/save_my_offer"
            android:background="@drawable/square_salmon"
            android:layout_margin="4dp"/>
    </LinearLayout>
</ScrollView>