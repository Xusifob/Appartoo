<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userProfilePicLayout">
                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="100%"
                    android:id="@+id/profileImage"
                    android:contentDescription="@string/offer_image"
                    android:background="@color/colorGray"
                    android:scaleType="centerCrop" />
            </android.support.percent.PercentRelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/userProfilePicLayout"
                android:padding="16dp">
                <TextView
                    style="@style/Paragraph"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/profileName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileJob"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:id="@+id/profileDescription"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/userProfilePicLayout"
                android:layout_marginTop="-22dp">
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shadow_small" />
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shadow_small" />
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shadow_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/userProfilePicLayout"
                android:id="@+id/userInfos"
                android:layout_marginTop="-24dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/smoker_icon"
                    android:src="@drawable/untold_smoker"
                    android:id="@+id/profileSmoker"
                    android:background="@drawable/circle_with_border" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/accept_animals_icon"
                    android:src="@drawable/untold_accept_animals"
                    android:id="@+id/profileAcceptsAnimals"
                    android:background="@drawable/circle_with_border" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/untold_relationship"
                    android:contentDescription="@string/single_icon"
                    android:id="@+id/profileRelationship"
                    android:background="@drawable/circle_with_border" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>