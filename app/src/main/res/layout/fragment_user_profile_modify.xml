<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mobile.appartoo.fragment.UserProfileSettingsFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offerFlatImage">
            <LinearLayout
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="200%"
                android:gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/default_profile_picture"/>
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
        <TextView
            style="@style/ProfileSection"
            android:text="@string/situation"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/Paragraph"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker"/>
            <Switch
                style="@style/NoTextSwitch"
                android:id="@+id/userProfileModifyWorker"/>
        </LinearLayout>
        <TextView
            style="@style/ProfileSection"
            android:text="@string/important_infos"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:singleLine="true"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userProfileModifyLastName"
                android:hint="@string/lastname"
                android:layout_weight="1"/>
            <EditText
                android:singleLine="true"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userProfileModifyFirstName"
                android:hint="@string/firstName"
                android:layout_weight="1"/>
        </LinearLayout>
        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/userProfileModifyPhone"
            android:hint="@string/phone"/>
        <EditText
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userProfileModifyMail"
            android:hint="@string/mail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inRelationship"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyInRelationship"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smoker"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsSmoker"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/ProfileSection"
            android:text="@string/personnal_infos"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generous"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsGenerous"/>
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/musician"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsMusician" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/organized"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsMessy" />
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/traveller"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsTraveller" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maniac"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsManiac" />
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/cook"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsCook" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/party_goer"
                    android:layout_weight="1" />
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsPartyGoer" />
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/layabout" />
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsLayabout" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spendthrift"
                    android:layout_weight="1" />
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsSpendthrift" />
                <TextView
                    style="@style/Paragraph"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/nerdy"/>
                <Switch
                    style="@style/NoTextSwitch"
                    android:id="@+id/userProfileModifyIsGeek" />
            </TableRow>
        </TableLayout>
        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            android:text="Enregistrer mes informations"
            android:id="@+id/saveProfileSettings"
            android:background="@drawable/rounded_square_salmon" />
    </LinearLayout>
</ScrollView>
