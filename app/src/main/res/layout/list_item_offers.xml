<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userProfilePicLayout">
                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="100%"
                    android:id="@+id/cardOfferFlatImage"
                    android:contentDescription="@string/offer_image"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/colorAlphaGreen"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@+id/cardOfferFlatImage"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/cardOfferActivated"
                    android:visibility="gone" />
            </android.support.percent.PercentRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/userProfilePicLayout"
                android:id="@+id/offerTitleAndOwner">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="16dp">
                    <TextView
                        style="@style/Paragraph"
                        android:layout_marginRight="72dp"
                        android:layout_marginEnd="72dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:id="@+id/cardOfferName" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardOfferOwnerAndKeyword" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"

                android:layout_below="@id/offerTitleAndOwner">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/city"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorGreen"
                        android:gravity="center"
                        android:text="@string/location" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardOfferCity"
                        android:gravity="center"
                        android:ellipsize="middle"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/city"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/keyword"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorGreen"
                        android:gravity="center"
                        android:text="@string/price"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/cardOfferPrice"
                        android:gravity="center"
                        android:ellipsize="middle"
                        android:layout_below="@id/keyword"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/rooms"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorGreen"
                        android:gravity="center"
                        android:text="@string/rooms"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardOfferRooms"
                        android:gravity="center"
                        android:ellipsize="middle"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/rooms"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/userProfilePicLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shadow" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_marginTop="-37dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/userProfilePicLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@color/colorWhite"
                app:civ_border_width="8dp"
                app:civ_border_color="@color/colorSubLightGray"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="-36dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/cardOfferOwnerImage"
                android:layout_below="@+id/userProfilePicLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@color/colorWhite"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorWhite"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>