<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userProfilePicLayout">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/offerFlatImage"
                android:adjustViewBounds="true"
                android:minHeight="100dp"
                android:contentDescription="@string/offer_image"
                android:scaleType="fitCenter"
                android:src="@drawable/flat2"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/colorAlpha"
                android:layout_alignBottom="@+id/offerFlatImage"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="18sp"
                android:text="@string/euro"
                android:textColor="@color/colorWhite"
                android:id="@+id/offerPrice"/>
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"  >
        <TextView
            style="@style/Paragraph"
            android:text="@string/keyword"
            android:id="@+id/offerKeyword"/>

            <TextView
                style="@style/Paragraph"
                android:text="@string/city"
                android:id="@+id/offerCity"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:id="@+id/offerOwnerImage"
            android:contentDescription="@string/user_profile_picture"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:src="@drawable/default_profile_picture"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|end"
                android:layout_toLeftOf="@id/offerOwnerImage"
                android:layout_toStartOf="@id/offerOwnerImage">
                <TextView
                    style="@style/Paragraph"
                    android:text="@string/firstName"
                    android:textStyle="bold"
                    android:id="@+id/offerOwner"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@string/zero"
                        android:id="@+id/offerRooms"
                        android:textColor="@color/colorSalmon"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/rooms_icon"
                        android:src="@drawable/bed" />
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>