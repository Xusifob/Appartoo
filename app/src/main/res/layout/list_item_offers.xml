<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userProfilePicLayout">
            <ImageView
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="100%"
                android:id="@+id/offerFlatImage"
                android:contentDescription="@string/offer_image"
                android:scaleType="centerCrop"
                android:background="@color/colorLightGray" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/colorAlpha"
                android:layout_alignBottom="@+id/offerFlatImage"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/offerPrice"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/colorAlphaGreen"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/offerFlatImage"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/offerActivated"
                android:visibility="gone" />
        </android.support.percent.PercentRelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:id="@+id/offerOwnerImage"
            android:contentDescription="@string/user_profile_picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_light_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/offerOwnerImage"
            android:layout_toStartOf="@+id/offerOwnerImage">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        style="@style/Paragraph"
                        android:text="@string/keyword"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/offerKeyword" />
                    <TextView
                        style="@style/Paragraph"
                        android:gravity="right"
                        android:text="@string/firstName"
                        android:textStyle="bold"
                        android:id="@+id/offerOwner"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/Paragraph"
                    android:text="@string/city"
                    android:id="@+id/offerCity"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/offerRoomsLayout">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="@string/zero"
                        android:id="@+id/offerRooms"
                        android:textColor="@color/colorSalmon"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/rooms_icon"
                        android:src="@drawable/bed" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>