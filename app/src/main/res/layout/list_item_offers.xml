<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userProfilePicLayout">
            <ImageView
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="178%"
                android:id="@+id/offerFlatImage"
                android:adjustViewBounds="true"
                android:minHeight="100dp"
                android:background="@color/colorGray"
                android:scaleType="fitCenter" />
            <TextView
                style="@style/BlankTextWithShadow"
                android:layout_alignBottom="@+id/offerFlatImage"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/offerPrice"/>
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">
        <TextView
            style="@style/Paragraph"
            android:text="Keyword"
            android:id="@+id/offerKeyword"/>

            <TextView
                style="@style/Paragraph"
                android:text="City"
                android:id="@+id/offerCity"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/offerOwnerImage"
            android:layout_alignParentRight="true"
            android:src="@drawable/default_profile_picture"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                android:layout_toLeftOf="@id/offerOwnerImage">
                <TextView
                    style="@style/Paragraph"
                    android:text="Owner"
                    android:textStyle="bold"
                    android:id="@+id/offerOwner"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="0"
                        android:id="@+id/offerRooms"
                        android:textColor="@color/colorSalmon"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/bed" />
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>