<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            style="@style/Paragraph"
            android:id="@+id/responsibleFullName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Eric Lapointe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/responsibleFullName"
            android:id="@+id/responsibleMail"
            android:layout_alignParentLeft="true"
            android:text="aric.lapointe@laposte.fr"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/responsibleMail"
            android:layout_alignParentLeft="true"
            android:id="@+id/responsibleIncome"
            android:text="1000â‚¬"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/deleteResponsible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/modifyResponsible"
        android:layout_toLeftOf="@+id/deleteResponsible"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/edit"/>
</RelativeLayout>