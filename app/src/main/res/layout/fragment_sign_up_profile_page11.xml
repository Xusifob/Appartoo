<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitle">
            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/left_arrow_salmon"
                android:onClick="previousView"/>
            <TextView
                style="@style/TitleSalmon"
                android:text="@string/presentation_configure_profile"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:isScrollContainer="true"
            android:inputType="textMultiLine"
            android:gravity="bottom|center_horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/signUpConfigureDescription"
            android:layout_margin="4dp"/>
        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="16dp"
            android:text="@string/finish_configuration"
            android:onClick="nextView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/square_salmon" />
    </RelativeLayout>
</ScrollView>