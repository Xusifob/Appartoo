<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TitleSalmon"
            android:text="@string/presentation_configure_profile"
            android:gravity="center"
            android:hint="@string/description"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:gravity="bottom|center_horizontal"
            android:ellipsize="start"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:id="@+id/signUpConfigureDescription"/>
        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="16dp"
            android:text="@string/go_further"
            android:onClick="nextView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/square_salmon" />
    </RelativeLayout>
</ScrollView>