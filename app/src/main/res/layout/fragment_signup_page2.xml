<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/TitleSalmon"
            android:text="@string/ask_informations"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <TableLayout
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning_condition"
            android:layout_centerInParent="true">
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/firstname_signup"/>
                <EditText
                    android:id="@+id/signupFirstName"
                    android:layout_width="200dp"
                    android:inputType="text"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/lastname_signup"/>
                <EditText
                    android:id="@+id/signupLastName"
                    android:layout_width="200dp"
                    android:inputType="text"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/mail_signup"/>
                <EditText
                    android:layout_width="200dp"
                    android:inputType="textEmailAddress"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/birthdate_signup"/>
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/signUpBirthdate"
                    android:onClick="openDatePicker"
                    android:focusable="false"
                    android:inputType="datetime"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/password_signup"/>
                <EditText
                    android:layout_width="200dp"
                    android:inputType="textPassword"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/confirm_password_signup"/>
                <EditText
                    android:layout_width="200dp"
                    android:inputType="textPassword"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_alignParentBottom="true">
            <Button
                style="@style/ButtonSalmon"
                android:text="@string/go_further"
                android:onClick="nextView"
                android:background="@drawable/rounded_square_salmon" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>