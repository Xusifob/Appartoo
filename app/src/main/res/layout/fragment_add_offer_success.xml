<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TitleSalmon"
            android:text="@string/congratulations"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>

        <TextView
            style="@style/Paragraph"
            android:gravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorSalmon"
            android:id="@+id/endOfAddModifyOffer"
            android:text="@string/end_of_add_offer"
            android:layout_centerInParent="true"/>

        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="16dp"
            android:text="@string/go_to_offer_list"
            android:layout_alignParentBottom="true"
            android:onClick="nextView"
            android:id="@+id/endOfAddModifyOfferButton"
            android:background="@drawable/square_salmon" />
    </RelativeLayout>
</ScrollView>