<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/left_arrow_salmon"
                android:onClick="previousView"/>
            <TextView
                style="@style/TitleSalmon"
                android:text="@string/join_appartoo"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_centerInParent="true">
            <TextView
                style="@style/Paragraph"
                android:gravity="center"
                android:textColor="@color/colorSalmon"
                android:text="@string/warning_condition"/>
            <TextView
                style="@style/Paragraph"
                android:text="@string/see_condition"
                android:textColor="@color/colorBlueFb"/>
        </LinearLayout>

        <Button
            style="@style/ButtonSalmon"
            android:text="@string/finish_signup"
            android:onClick="nextView"
            android:id="@+id/finishSignUpButton"
            android:layout_margin="16dp"
            android:background="@drawable/square_salmon"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</ScrollView>