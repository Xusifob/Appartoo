<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorSalmon"
            android:padding="10dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/drawerUserProfilePic"
                android:src="@drawable/default_profile_picture"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drawerUserName"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:text="Alexandria Marchal Wilson"/>
                <TextView
                    style="@style/Paragraph"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:text="wmarchal@millet.com"
                    android:id="@+id/drawerUserEmail"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>