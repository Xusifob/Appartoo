<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="@string/i_research_offers"
            android:checked="true"
            android:id="@+id/searchOffersCheckbox"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchPlace"
            android:singleLine="true"
            android:completionThreshold="1"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/marker_red"
            android:drawableStart="@drawable/marker_red"
            android:drawablePadding="4dp"
            android:hint="@string/place" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/viewMoreOptions">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/from"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:drawableStart="@drawable/clock"
                    android:drawableLeft="@drawable/clock"
                    android:id="@+id/searchAvailabilityStarts"
                    android:drawablePadding="4dp"/>
                <View
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/to"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/clock"
                    android:drawableLeft="@drawable/clock"
                    android:id="@+id/searchAvailabilityEnds"
                    android:drawablePadding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/searchThirdField"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/money_icon"
                    android:src="@drawable/euro_green_small"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchPriceMinValue"
                    android:text="@string/zero"/>
                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:id="@+id/searchOfferPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:barHeight="2dp"
                    app:showLabels="false"
                    app:absoluteMaxValue="2000"
                    app:absoluteMinValue="0"
                    app:valuesAboveThumbs="false" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchPriceMaxValue"
                    android:text="@string/two_thousands"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/searchRoomsField"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/bed_icon"
                    android:src="@drawable/bed_small"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchRoomsMinValue"
                    android:text="@string/zero"/>
                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:id="@+id/searchOfferRooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:barHeight="2dp"
                    app:showLabels="false"
                    app:absoluteMaxValue="10"
                    app:absoluteMinValue="0"
                    app:valuesAboveThumbs="false" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchRoomsMaxValue"
                    android:text="10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/colorBlue"
                android:id="@+id/searchAcceptAnimals">
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/accept_animals"
                    android:onClick="toggleView"
                    android:tag="true"/>
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/doesnt_accept_animals"
                    android:onClick="toggleView"
                    android:tag="false"/>
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlue"
                    android:text="@string/indifferent"
                    android:onClick="toggleView" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/colorBlue"
                android:id="@+id/searchAcceptSmokers">
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/accept_smokers"
                    android:onClick="toggleView"
                    android:tag="true"/>
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/doesnt_accept_smokers"
                    android:onClick="toggleView"
                    android:tag="false"/>
                <TextView
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlue"
                    android:text="@string/indifferent"
                    android:onClick="toggleView" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>