<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Je recherche des annonces"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchPlace"
            android:singleLine="true"
            android:completionThreshold="1"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/marker_red"
            android:drawableStart="@drawable/marker_red"
            android:drawablePadding="4dp"
            android:hint="@string/place" />
        <EditText
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/key_yellow"
            android:drawableStart="@drawable/key_yellow"
            android:drawablePadding="4dp"
            android:hint="@string/keyword" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/viewMoreOptions">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/from"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:drawableStart="@drawable/clock"
                    android:drawableLeft="@drawable/clock"
                    android:id="@+id/addOfferAvailabilityStarts"
                    android:drawablePadding="4dp"/>
                <View
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/to"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/clock"
                    android:drawableLeft="@drawable/clock"
                    android:id="@+id/addOfferAvailabilityEnds"
                    android:drawablePadding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/searchThirdField"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/money_icon"
                    android:src="@drawable/euro_green"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchRangeMinValue"
                    android:text="@string/zero"/>
                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:id="@+id/searchOfferPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:barHeight="2dp"
                    app:showLabels="false"
                    app:absoluteMaxValue="2000"
                    app:absoluteMinValue="0"
                    app:valuesAboveThumbs="false" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchRangeMaxValue"
                    android:text="@string/two_thousands"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/searchRoomsField"
                android:layout_margin="4dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/money_icon"
                    android:src="@drawable/bed"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchOfferRoomsMin"
                    android:text="@string/zero"/>
                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:id="@+id/searchOfferRooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:barHeight="2dp"
                    app:showLabels="false"
                    app:absoluteMaxValue="10"
                    app:absoluteMinValue="0"
                    app:valuesAboveThumbs="false" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/searchOfferRoomsMax"
                    android:text="10"/>
            </LinearLayout>
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:padding="4dp"
                android:text="Le logement accepte les animaux">
            </CheckBox>
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:padding="4dp"
                android:text="Le logement accepte les fumeurs">
            </CheckBox>
        </LinearLayout>
    </LinearLayout>
        <Button
            style="@style/ButtonSalmon"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:text="@string/search"/>
</RelativeLayout>