<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userProfileFrame">
        <fragment
            android:name="mobile.appartoo.fragment.UserProfileMainFragment"
            android:id="@+id/userProfileMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:name="mobile.appartoo.fragment.UserProfileSettingsFragment"
            android:id="@+id/userProfileSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:name="mobile.appartoo.fragment.UserProfileModifyFragment"
            android:id="@+id/userProfileModify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <include layout="@layout/navigation_drawer_layout"/>
</android.support.v4.widget.DrawerLayout>
